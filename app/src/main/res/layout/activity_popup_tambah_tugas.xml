<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_background"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#00BCD4"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/btnBackTugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_ic"
            android:background="@android:color/transparent"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Tugas"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <EditText
            android:id="@+id/etJudulTugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Tugas"
            android:background="@drawable/form_field_background"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etTanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal (yyyy-mm-dd)"
            android:background="@drawable/form_field_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jam (HH:mm)"
            android:background="@drawable/form_field_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/etMatkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mata Kuliah"
            android:background="@drawable/form_field_background"
            android:padding="12dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Tombol Konfirmasi -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKonfirmasiTugas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Tugas"
        android:background="@drawable/seeallbg"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp" />
</LinearLayout>
